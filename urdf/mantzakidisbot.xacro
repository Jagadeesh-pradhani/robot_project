<?xml version="1.0"?>
<robot name="mantzakidisbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

 <!-- Σταθερές για τις διαστάσεις του ρομπότ -->
 <xacro:property name="height1" value="0.25" />        <!-- Ύψος ρομπότ-->
 <xacro:property name="length1" value="0.75" />        <!-- Μήκος ρομπότ-->
<xacro:property name="width1" value="0.8" />           <!--Πλάτος ρομπότ-->
<xacro:property name="mass1" value="10" />             <!--Μάζα ρομπότ-->
<xacro:property name="caster_radius" value="0.07" />   <!--Ακτίνα caster-->
<xacro:property name="caster_mass" value="0.5" />      <!-- Μάζα του caster -->
<xacro:property name="head_radius" value="0.08" />     <!-- Ακτίνα του κεφαλιού -->
<xacro:property name="head_mass" value="1" />          <!-- Μάζα του κεφαλιού -->
<xacro:property name="w_length" value="0.1"/>          <!-- Μήκος των τροχών -->
<xacro:property name="w_radius" value="0.2"/>          <!-- Ακτίνα των τροχών -->
<xacro:property name="w_mass" value="0.5" />           <!-- Μάζα των τροχών -->



 <!-- Εισαγωγή χρωμάτων Rviz -->
  <xacro:include filename="$(find project_final_mantzakidis_131)/urdf/materials.xacro" />

<!-- Default Inertial -->
  <xacro:macro name="default_inertial" params="z_value i_value mass">
    <inertial>
      <origin xyz="0 0 ${z_value}" rpy="0 0 0"/>
      <mass value="${mass}" />
      <inertia ixx="${i_value}" ixy="0.0" ixz="0.0"
               iyy="${i_value}" iyz="0.0"
               izz="${i_value}" />
      </inertial>
  </xacro:macro>

<!-- Εισαγωγή URDF του βραχίονα -->
  <xacro:include filename="$(find project_final_mantzakidis_131)/urdf/mantzakidisbot_arm.xacro" />  

<!-- Εισαγωγή στοιχείων Gazebo, συμπεριλαμβανομένων των χρωμάτων του Gazebo -->
  <xacro:include filename="$(find project_final_mantzakidis_131)/urdf/mantzakidisbot.gazebo" />

<!-- Εισαγωγή laser & camera-->
  <xacro:include filename="$(find project_final_mantzakidis_131)/urdf/mantzakidisbot_laser_camera.xacro" />
<!-- Εισαγωγή κάμερας κεφαλιού-->
  <xacro:include filename="$(find project_final_mantzakidis_131)/urdf/head_camera.xacro" />

  <!-- Robot chassis -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="${width1} ${length1} ${height1}"/>
      </geometry>
      <material name="green">
      </material>
    </visual>
    <!-- Chassis collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="${width1} ${length1} ${height1}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="${mass1}"/>
      <inertia ixx="0.52" ixy="0.0" ixz="0.0" iyy="0.58" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

<!-- Caster -->
  <link name="caster">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="${caster_radius}" />
      </geometry>
       <material name="green">
      </material>
    </visual>
     <!-- Caster collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="${caster_radius}" />
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <inertial>
      <mass value="${caster_mass}"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  <!-- Caster joint -->
  <joint name="joint_caster" type="fixed">
    <parent link="chassis"/>
    <child link="caster"/>
     <origin xyz="-0.35 0 -0.125" rpy="0 0 0" /> 
  </joint>

<!--Head-->
    <link name="head">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <sphere radius="${head_radius}" />
        </geometry>
        <material name="green">
      </material>
      </visual>
      <!-- Head collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="${head_radius}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="${head_mass}"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.004"/>
    </inertial>
    </link>
  
  <!--Head joint-->
  <joint name="joint_head" type="continuous">
    <parent link="chassis"/>
    <child link="head"/>
    <origin xyz="0 0 0.2" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <effort>joint_head_effort_interface</effort>
  </joint> 


<!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="${w_length}" radius="${w_radius}" />
      </geometry>
     <material name="black">
      </material>
    </visual>
    <!-- Right Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="${w_length}" radius="${w_radius}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="${w_mass}"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>
  <joint name="joint_right_wheel" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.43 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

<!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="${w_length}" radius="${w_radius}" />
      </geometry>
      <material name="black">
      </material>
    </visual>
    <!-- Left Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="${w_length}" radius="${w_radius}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="${w_mass}"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>
  <joint name="joint_left_wheel" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.43 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>
</robot>